    body.login
        .logo
            a(href="javascript:void(0);")
                img(src="/icons/logo.png")
        div(class="menu-toggler sidebar-toggler")
        .content
            // BEGIN LOGIN FORM
            form(class="login-form" action="/login" method="post" enctype="application/x-www-form-urlencoded")
                h3(class="form-title") Login to your account
                div(class="alert alert-danger #{_class}")
                    button(class="close" data-close="alert")
                    span #{msg}
                div.form-group
                    label(class="control-label visible-ie8 visible-ie9") Email
                    .input-icon
                        i(class="fa fa-user")
                        input(class="form-control placeholder-no-fix eleForm" value="pos1@pos.com" type="text" autocomplete="off" placeholder="Email for login" name="email" id="email")
                div.form-group
                    label(class="control-label visible-ie8 visible-ie9") Password
                    .input-icon
                        i(class="fa fa-lock")
                        input(class="form-control placeholder-no-fix eleForm" type="password" autocomplete="off" placeholder="Password" name="password" id="password")
                div.form-actions
                    button(class="btn blue pull-right eleForm" type="submit") Login &nbsp;
                        i(class="m-icon-swapright m-icon-white")
                .forget-password
                    h4= 'Forgot your password ?'
                    p.
                        no worries, click
                        <a href="/request_mail/neeraj@glitellp.com" id="forget-password"> here </a>
                        to contact Administrators for reset password.
                .create-account
                    p.
                        Don't have an account yet ?&nbsp; click <a href="/request_mail/neeraj@glitellp.com" id="register-btn">
                        Contact Administrators for Create an account </a>
        .copyright #{new Date().getFullYear()} &copy; Glite - Admin Login Page.
        // loading box with css3
        div.loadingBox
            div.windows8
                div.wBall#wBall_1
                    div.wInnerBall
                div.wBall#wBall_2
                    div.wInnerBall
                div.wBall#wBall_3
                    div.wInnerBall
                div.wBall#wBall_4
                    div.wInnerBall
                div.wBall#wBall_5
                    div.wInnerBall
            div.modal-backdrop.fade.in